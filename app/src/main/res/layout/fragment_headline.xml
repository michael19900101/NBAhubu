<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.aotuman.nbahubu.ui.news.LoadingHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/status_top_shadow_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/status_and_tab_shadow"
        android:visibility="visible">

        <!--这一块其实用来设置跟状态栏的高度-->
        <View
            android:id="@+id/status_bar_shadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <!--这一块其实用来设置跟LatestFragment的MagicIndicator一样高-->
        <View
            android:id="@+id/magic_indicator_shadow"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>

    <!--这一块其实用来设置滑动列表后，固定在顶部的状态栏+magic_indicator高度-->
    <View
        android:id="@+id/fixed_status_shadow_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/page_bg_grey_color"
        android:visibility="gone" />

</FrameLayout>