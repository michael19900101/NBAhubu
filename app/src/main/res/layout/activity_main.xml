<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/page_bg_grey_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomDivider" />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bottomNavigationView"
        android:background="@color/divider_line1_color" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/page_bg_grey_color"
        app:itemTextColor="@drawable/hometab_selector_item_color"
        app:itemIconTint="@drawable/hometab_selector_item_color"
        app:menu="@menu/bottommenu" />

</RelativeLayout>