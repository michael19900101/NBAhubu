<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_footer_height"
    tools:parentTag="LinearLayout"
    tools:orientation="horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_footer_size"
            android:layout_height="@dimen/tab_footer_size"
            android:layout_marginTop="6dp"
            android:src="@drawable/bg_footer_tab_latest" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/footer_tab_latest"
            android:textColor="@color/footer_tab_text_color"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_footer_size"
            android:layout_height="@dimen/tab_footer_size"
            android:layout_marginTop="6dp"
            android:src="@drawable/bg_footer_tab_match" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/footer_tab_match"
            android:textColor="@color/footer_tab_text_color"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_footer_size"
            android:layout_height="@dimen/tab_footer_size"
            android:layout_marginTop="6dp"
            android:src="@drawable/bg_footer_tab_video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/footer_tab_video"
            android:textColor="@color/footer_tab_text_color"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_footer_size"
            android:layout_height="@dimen/tab_footer_size"
            android:layout_marginTop="6dp"
            android:src="@drawable/bg_footer_tab_mine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/footer_tab_mine"
            android:textColor="@color/footer_tab_text_color"
            android:textSize="10sp" />
    </LinearLayout>
</merge>
