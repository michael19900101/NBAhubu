<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="333dp"
    android:orientation="vertical">

  <com.youth.banner.Banner
      android:id="@+id/bannerLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:banner_indicator_normal_color="@color/color_white"
      app:banner_indicator_selected_color="@color/primary_green1_color"
      app:banner_indicator_normal_width="8dp"
      app:banner_indicator_selected_width="8dp"
      app:banner_indicator_marginBottom="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="98dp"
      android:background="@drawable/banner_bottom_shadow"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <TextView
      android:id="@+id/bannerTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="25dp"
      android:textSize="@dimen/text_size_18sp"
      android:text="TextViewTextViewTextView"
      android:textColor="@color/text_white_color"
      app:layout_constraintBottom_toBottomOf="@+id/bannerLayout"
      app:layout_constraintStart_toStartOf="@+id/bannerLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>

